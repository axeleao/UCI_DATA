<!-- SIGNOS VITALES -->
<div class="container p-4">
    <div class="card">
        <div class="card-header text-center">
            <h4>Signos Vitales</h4>
        </div>
        <div class="card-body">
            <form action="/links/Ing_Signos/" method="POST">
            {{#each pac_HC}}
            <input type="text" value="{{id_hcl}}" name="idPaciente" id="idPaciente"  hidden>
            <div class="row p-1">
                <div class="col-md-3 mx-auto"> <!-- Presión Arterial -->
                        <div class="container p-1">
                            <div class="card">
                                <div class="card-header text-center">
                                    <h4>Presión Arterial</h4>
                                </div>
                                <div class="card-body">
                                    <input type="text" placeholder="Sistólica" id="Sistolica" name="Sistolica" size="5" autofocus required>
                                    /
                                    <input type="text" placeholder="Diastólica" id="Diastolica" name="Diastolica" size="5" autofocus required>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="col-md-3 mx-auto"> <!-- Sat. de Oxigeno -->
                        <div class="container p-1">
                            <div class="card" >
                                <div class="card-header text-center">
                                    <h4>Sat. de Oxigeno</h4>
                                </div>
                                <div class="card-body">
                                    <input type="text" placeholder="% Presión Arterial" id="Sat_Ox" name="Sat_Ox" class="form-control"  autofocus required>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="col-md-3 mx-auto"> <!-- Frec. Cardiaca -->
                        <div class="container p-1">
                            <div class="card">
                                <div class="card-header text-center">
                                    <h4>Frec. Cardiaca</h4>
                                </div>
                                <div class="card-body">
                                    <input type="text" placeholder="Frecuencia Cardiaca" id="Frec_Card" name="Frec_Card" class="form-control"  autofocus required>
                                </div>
                            </div>
                        </div>
                        
                </div>
                <div class="col-md-3 mx-auto">
                        <div class="container p-1">
                            <div class="card">
                                <div class="card-body">
                                        <div>  
                                            <button class="btn btn-success" style="width: 200px;">Ingresar Signos</button>
                                        </div>
                                    </form>
                                    <br>
                                    <form action="/alertaMedicos" method="POST">
                                        <div> 
                                            <input type="text" value="{{id_hcl}}" name="idhcl" hidden>
                                            <button class="btn btn-danger" style="width: 200px;">Generar Alerta</button>
                                        </div>
                                    </form>

                                </div>
                                
                            </div>
                            
                        </div>
                        
                </div>
                

            </div>
            {{/each}}
            </form>             
        </div>
    </div>
</div>



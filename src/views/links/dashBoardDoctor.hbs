                <th scope="col">Nombre Paciente</th>
                <th scope="col">Edad</th>
                <th scope="col">Fecha Nac</th> 
                <th scope="col">Cama</th>
                <th scope="col">Fecha Ingreso</th>
                <th scope="col">Patología</th>
            </tr>
        </thead>
        <tbody>
            {{#each pac_HC}}
            <tr>
                <th scope="row">{{ id_hcl }}</th>

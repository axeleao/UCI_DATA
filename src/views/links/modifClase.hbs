<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center ">
                <div class="card-header">
                    <h3>Modificar Clase </h3>
                </div>
                <div class="card-body ">
                    <form action="/links/updateClase" method="POST">
                        {{#each ClaseModif}}

                        <div class="form-group panel panel-heading text-left"> Id Clase
                            <input type="text" value="{{ idClase }}" name="IdClase" id="IdClase" class="form-control" placeholder="Id de clase" readonly>
                        </div>

                        <div class="form-group panel panel-heading text-left ">Fecha de la clase
                            <div class="panel-body">
                                <input type="date" value="{{ fecha_Clase }}" name="fechaModifClase" id="fechaModifClase" title="fechaModifClase" class="form-control panel-body" placeholder="fechaModifClase" autofocus>
                            </div>
                        </div>

                        <div class="form-group panel panel-heading text-left"> Id Escenario
                            <select value="" class="browser-default custom-select" name="escenario" id="escenario">
                                <option value="{{ idEscenario }}">{{ idEscenario }}</option>
                                {{#each program}}
                                    <option value="{{ idClase }}">{{ nombreEscenario }}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group panel panel-heading text-left"> Id Linea
                            <input type="text" value="{{ linea }}" name="idLinea" class="form-control" placeholder="Linea del escenario" autofocus required>
                        </div>

                        <div class="form-group panel panel-heading text-left"> Id Profesor
                            <input type="text" value="{{ idProfesor }}"  name="idProfesor" id="prof" class="form-control" placeholder="Id del Profesor"
                                autofocus required>
                        </div>
                        <div class="form-group panel panel-heading text-left"> Valor Clase
                            <input type="text" value="{{ valor_Clase }}" name="valorClase" class="form-control" placeholder="Valor de la clase"
                                autofocus required>
                        </div>
                        {{/each}}
                        <div class="form-group">
                            <button class="form-group btn btn-primary btn-block" name="btnModifClase">
                                Modificar Clase
                            </button>
                        </div>
                        
                        
                    </form>
                    <!-- 
                    <form class="form-group" action="/links/updateClase/" method="POST">
                                <div class="form-group" align="center">
                                    <input type="text" value="{{idClase}}" name="idClase" hidden>
                                    <button class="form-group btn btn-success btn-block" name="btnModifClase" id="btnModifClase" >oTRO</button>
                                </div>
                        </form>
                        -->
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/script.js"></script>